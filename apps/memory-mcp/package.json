{
  "name": "@duyetbot/memory-mcp",
  "version": "0.1.0",
  "description": "MCP memory server for duyetbot-agent on Cloudflare Workers",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": ["dist", "src", "migrations"],
  "scripts": {
    "build": "tsc",
    "dev": "wrangler dev",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "deploy": "wrangler deploy",
    "deploy:staging": "wrangler deploy --env staging",
    "db:migrate": "wrangler d1 migrations apply duyetbot-memory",
    "db:migrate:local": "wrangler d1 migrations apply duyetbot-memory --local"
  },
  "keywords": ["mcp", "memory", "cloudflare", "workers", "duyetbot"],
  "author": "duyet",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "hono": "^4.6.0",
    "zod": "^3.23.8",
    "zod-to-json-schema": "^3.24.5"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241127.0",
    "@types/node": "^24.10.1",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8",
    "wrangler": "^3.93.0"
  }
}
