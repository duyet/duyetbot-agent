# Cache static assets (images, fonts, icons) for 1 year
/*.svg
/*.jpg
/*.jpeg
/*.png
/*.gif
/*.webp
/*.ico
/*.woff
/*.woff2
  Cache-Control: public, max-age=31536000, immutable

# Cache _next/static chunks (hashed) for 1 year
/_next/static/*
  Cache-Control: public, max-age=31536000, immutable

# Don't cache HTML files - allow revalidation
/*.html
  Cache-Control: public, max-age=0, must-revalidate

# Cache images directory for 1 year
/images/*
  Cache-Control: public, max-age=31536000, immutable
