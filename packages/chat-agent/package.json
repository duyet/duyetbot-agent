{
  "name": "@duyetbot/chat-agent",
  "version": "0.1.0",
  "description": "Reusable chat agent with LLM and MCP tools support",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./debug-footer": {
      "types": "./dist/debug-footer.d.ts",
      "import": "./dist/debug-footer.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit",
    "test": "vitest run --passWithNoTests"
  },
  "dependencies": {
    "@duyetbot/hono-middleware": "workspace:*",
    "@duyetbot/observability": "workspace:*",
    "@duyetbot/prompts": "workspace:*",
    "@duyetbot/types": "workspace:*",
    "zod": "^3.24.0",
    "zod-to-json-schema": "^3.24.5"
  },
  "peerDependencies": {
    "agents": ">=0.2.24"
  },
  "peerDependenciesMeta": {
    "agents": {
      "optional": true
    }
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241127.0",
    "@duyetbot/config-vitest": "workspace:*",
    "@types/node": "catalog:",
    "agents": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:"
  }
}
