{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "noEmit": false,
    "allowImportingTsExtensions": false,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@duyetbot/types": ["../../packages/types/src"],
      "@duyetbot/types/*": ["../../packages/types/src/*"],
      "@duyetbot/providers": ["../../packages/providers/src"],
      "@duyetbot/providers/*": ["../../packages/providers/src/*"],
      "@duyetbot/tools": ["../../packages/tools/src"],
      "@duyetbot/tools/*": ["../../packages/tools/src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.spec.ts"]
}
