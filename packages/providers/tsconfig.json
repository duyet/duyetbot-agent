{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "noEmit": false,
    "allowImportingTsExtensions": false,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@duyetbot/chat-agent": ["../../packages/chat-agent/src"],
      "@duyetbot/chat-agent/*": ["../../packages/chat-agent/src/*"],
      "@duyetbot/types": ["../../packages/types/src"],
      "@duyetbot/types/*": ["../../packages/types/src/*"]
    },
    "types": ["node", "@cloudflare/workers-types"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.spec.ts"]
}
