        void (async () => {
          try {
            const userMessageId = await new AnalyticsCollector((this.env as unknown as { OBSERVABILITY_DB?: D1Database }).OBSERVABILITY_DB!).captureUserMessage({ // Instantiate AnalyticsCollector here
              sessionId,
              content: input.text,
              platform,
              userId: input.userId.toString(),
              ...(input.username ? { username: input.username } : {}),
              ...(input.chatId ? { chatId: input.chatId.toString() } : {}),
              ...(input.metadata?.platformMessageId
                ? { platformMessageId: input.metadata.platformMessageId as string }
                : {}),
              ...(eventId ? { eventId } : {}),
            });

