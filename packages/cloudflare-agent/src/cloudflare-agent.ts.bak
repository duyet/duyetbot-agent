/** Progress update entry for workflow execution */
export interface WorkflowProgressEntry {
  type: string;
  iteration: number;
  message: string;
  toolName?: string;
  toolArgs?: Record<string, unknown>;
  toolResult?: string;
  durationMs?: number;
  timestamp: number;
