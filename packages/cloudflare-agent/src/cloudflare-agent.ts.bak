          this.setState({ ...this.state, analyticsCollectorInitialized: true, updatedAt: Date.now() }); // Set state flag
        }
      }

      logger.info('[CloudflareAgent] receiveMessage called', {
        traceId,
        ...input,
      });

      // Detect and recover from stuck activeBatch
