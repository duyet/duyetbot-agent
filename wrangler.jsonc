{
  "$schema": "https://raw.githubusercontent.com/cloudflare/wrangler/main/schemas/wrangler.json",
  "name": "duyetbot-agent",
  "main": "src/index.ts",
  "compatibility_date": "2024-11-27",
  "compatibility_flags": ["nodejs_compat"],

  // Account and worker configuration
  "workers_dev": true,
  "node_compat": true,

  // KV Namespaces
  "kv_namespaces": [
    {
      "binding": "TASKS",
      "id": "tasks_kv_id_placeholder"
    },
    {
      "binding": "SESSIONS",
      "id": "sessions_kv_id_placeholder"
    }
  ],

  // D1 Database
  "d1_databases": [
    {
      "binding": "DB",
      "database_name": "duyetbot-agent-db",
      "database_id": "db_id_placeholder"
    }
  ],

  // Environment variables (secrets managed via CLI)
  "vars": {
    "ENVIRONMENT": "development"
  },

  // Cron triggers for scheduled tasks
  "triggers": {
    "crons": [
      "*/5 * * * *" // Every 5 minutes
    ]
  },

  // Build configuration
  "build": {
    "command": "npm run build"
  },

  // Limits and resources
  "limits": {
    "cpu_ms": 50000
  },

  // Environment-specific configurations
  "env": {
    "staging": {
      "name": "duyetbot-agent-staging",
      "vars": {
        "ENVIRONMENT": "staging"
      },
      "kv_namespaces": [
        {
          "binding": "TASKS",
          "id": "tasks_kv_staging_id_placeholder"
        },
        {
          "binding": "SESSIONS",
          "id": "sessions_kv_staging_id_placeholder"
        }
      ],
      "d1_databases": [
        {
          "binding": "DB",
          "database_name": "duyetbot-agent-db-staging",
          "database_id": "db_staging_id_placeholder"
        }
      ]
    },
    "production": {
      "name": "duyetbot-agent-prod",
      "workers_dev": false,
      "route": {
        "pattern": "bot.example.com/*",
        "zone_name": "example.com"
      },
      "vars": {
        "ENVIRONMENT": "production"
      },
      "kv_namespaces": [
        {
          "binding": "TASKS",
          "id": "tasks_kv_prod_id_placeholder"
        },
        {
          "binding": "SESSIONS",
          "id": "sessions_kv_prod_id_placeholder"
        }
      ],
      "d1_databases": [
        {
          "binding": "DB",
          "database_name": "duyetbot-agent-db-prod",
          "database_id": "db_prod_id_placeholder"
        }
      ]
    }
  }
}
