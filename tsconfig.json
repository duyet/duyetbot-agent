{
  "extends": "./packages/config-typescript/base.json",
  "compilerOptions": {
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@duyetbot/types": ["packages/types/src"],
      "@duyetbot/types/*": ["packages/types/src/*"],
      "@duyetbot/providers": ["packages/providers/src"],
      "@duyetbot/providers/*": ["packages/providers/src/*"],
      "@duyetbot/tools": ["packages/tools/src"],
      "@duyetbot/tools/*": ["packages/tools/src/*"],
      "@duyetbot/core": ["packages/core/src"],
      "@duyetbot/core/*": ["packages/core/src/*"],
      "@duyetbot/hono-middleware": ["packages/hono-middleware/src"],
      "@duyetbot/hono-middleware/*": ["packages/hono-middleware/src/*"],
      "@duyetbot/progress": ["packages/progress/src"],
      "@duyetbot/progress/*": ["packages/progress/src/*"]
    }
  },
  "include": ["packages/**/*", "tests/**/*"],
  "exclude": ["node_modules", "**/node_modules", "**/dist", "apps/**", "coverage"]
}
