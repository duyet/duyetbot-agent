{
  "name": "duyetbot-agent",
  "version": "0.1.0",
  "description": "Autonomous bot agent system with multi-LLM support - Monorepo",
  "private": true,
  "type": "module",
  "workspaces": ["packages/*", "apps/*", "tests/*"],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "type-check": "turbo run type-check",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "check": "biome check --write . && turbo run type-check",
    "clean": "turbo run clean && rm -rf node_modules .turbo",
    "prepare-hooks": "bash scripts/install-hooks.sh",
    "prepare": "bash scripts/install-hooks.sh || true",
    "deploy": "concurrently 'bun run deploy:telegram' 'bun run deploy:github' 'bun run deploy:memory-mcp'",
    "deploy:telegram": "turbo run deploy --filter=@duyetbot/telegram-bot && bun run config:telegram",
    "deploy:github": "turbo run deploy --filter=@duyetbot/github-bot && bun run config:github",
    "deploy:memory-mcp": "bun run --filter @duyetbot/memory-mcp deploy",
    "config": "concurrently 'bun run config:telegram' 'bun run config:github'",
    "config:telegram": "bun scripts/config.ts telegram",
    "config:github": "bun scripts/config.ts github",
    "config:show": "bun scripts/config.ts show"
  },
  "keywords": ["agent", "bot", "cloudflare-workers", "llm", "claude", "automation", "monorepo"],
  "author": "duyet",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/node": "^22.10.0",
    "concurrently": "^9.2.1",
    "turbo": "^2.0.0",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "packageManager": "bun@1.3.2",
  "trustedDependencies": ["@biomejs/biome", "esbuild", "sharp", "workerd"]
}
