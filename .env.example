# Unified Environment Configuration
# Copy this file to .env.local and fill in your values

# ============================================
# AI Gateway (Authenticated Mode)
# @see https://developers.cloudflare.com/ai-gateway/configuration/authentication/
# ============================================
AI_GATEWAY_NAME=duyetbot

# ============================================
# LLM Provider
# ============================================
MODEL=x-ai/grok-4.1-fast

# ============================================
# Prompt evaluation
# ============================================
OPENROUTER_API_KEY=
PROMPTFOO_CACHE_ENABLED=true
PROMPTFOO_API_KEY=

# ============================================
# Telegram
# ============================================
TELEGRAM_BOT_TOKEN=  # Set via: bunx wrangler secret put TELEGRAM_BOT_TOKEN

# ============================================
# GitHub
# ============================================
GITHUB_TOKEN=  # Set via: bunx wrangler secret put GITHUB_TOKEN
GITHUB_WEBHOOK_SECRET=  # Set via: bunx wrangler secret put GITHUB_WEBHOOK_SECRET

# ============================================
# Memory MCP (optional)
# ============================================
MEMORY_MCP_URL=https://duyetbot-memory.duyet.workers.dev
MEMORY_MCP_TOKEN=

# ============================================
# GitHub MCP (Web App)
# ============================================
# GitHub MCP token for GitHub bot MCP server
# Optional - used if apps/web needs separate GitHub token from main bot
MCP_GITHUB_TOKEN=

# ============================================
# Mem0.ai Integration (optional)
# ============================================
MEM0_API_KEY=m0-xxxxx
MEM0_ENABLED=false
MEM0_STRATEGY=parallel
MEM0_MCP_ENABLED=false
MEM0_USER_ID=
MEM0_AGENT_ID=duyetbot

# ============================================
# CI/CD - Codecov (GitHub Actions secret)
# ============================================
# CODECOV_TOKEN=  # Set as GitHub secret, not here. Get token from https://codecov.io
